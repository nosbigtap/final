<!DOCTYPE html>
<html ng-app="stacksheet">
  <head>
    <title>DragginSheet</title>
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
      <link rel="stylesheet" type="text/css" href="/css/stacksheet.css"/>

      <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
      <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular.js"></script>
      <script src="//npmcdn.com/draggabilly@2.1/dist/draggabilly.pkgd.min.js"></script>


  </head>
  <body ng-controller="textController as txtCtrl" >
    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation"><a href="/login">Login</a></li>
        </ul>
    </nav>
    <nav class="navbar navbar-default addRemove">
      <ul class="buttonMenu">
        <button class="btn btn-lg btn-default styleButton" ng-click="txtCtrl.addTextArea()">Add Element</button>
        <button class="btn btn-lg btn-default styleButton" ng-click="txtCtrl.removeTextArea()" >Remove Element</button>
        <button class="btn btn-lg btn-default styleButton" ng-click="txtCtrl.getInfo()">Load</button>
      </ul>
    </nav>

    <div id="documents" class="container">
      <div class="item" ng-repeat="textArea in txtCtrl.textAreas track by $index" ng-style="textArea.parent">
        <div class="handle"></div>
           <textarea ng-blur="txtCtrl.saveInfo($index)" ng-focus="txtCtrl.focusTextArea()" ng-model="txtCtrl.textAreas[$index].text" ng-style="textArea.style">
             {{ textArea.text }}
          </textarea>
          <input type="hidden" ng-model="txtCtrl.textAreas[$index]._id" value="{{textArea._id}}"/>
      </div>

    </div>

    <script src="/js/module.stacksheet.js"></script>
  </body>
</html>
